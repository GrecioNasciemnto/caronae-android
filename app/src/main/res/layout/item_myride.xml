<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:15"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/direction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_tv"
            android:text="Indo para o fundÃ£o" />

        <TextView
            android:id="@+id/neighborhood_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/direction_tv"
            android:layout_toEndOf="@+id/direction_tv"
            android:layout_toRightOf="@+id/direction_tv"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Tijuca" />

        <TextView
            android:id="@+id/routine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/direction_tv"
            android:text="S-T-Q-Q-S-S" />

        <TextView
            android:id="@+id/slots_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/neighborhood_tv"
            android:layout_alignStart="@+id/neighborhood_tv"
            android:layout_below="@+id/direction_tv"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="3 vagas" />

        <Button
            android:id="@+id/delete_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Excluir" />

    </RelativeLayout>
</android.support.v7.widget.CardView>