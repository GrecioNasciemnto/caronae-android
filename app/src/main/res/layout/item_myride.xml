<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/zone_sul"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/neighborhood_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="COPACABANA"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/neighborhood_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="Chegando Ã¡s 16:45"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/neighborhood_tv"
            android:layout_toEndOf="@+id/time_tv"
            android:layout_toRightOf="@+id/time_tv"
            android:text=" | 03/11"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slots_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="3 vagas"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/routine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_tv"
            android:layout_toEndOf="@+id/slots_tv"
            android:layout_toRightOf="@+id/slots_tv"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="S-T-Q-Q-S-S"
            android:textColor="@color/white" />

        <com.rey.material.widget.Button
            android:id="@+id/delete_bt"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:text="EXCLUIR"
            android:textColor="@color/white"
            app:rd_enable="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>