<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/blue"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_pic" />

        <TextView
            android:id="@+id/neighborhood_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/photo_iv"
            android:layout_toRightOf="@+id/photo_iv"
            android:text="COPACABANA"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/neighborhood_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/photo_iv"
            android:layout_toRightOf="@+id/photo_iv"
            android:text="Chegando ás 16:45"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/neighborhood_tv"
            android:layout_toEndOf="@+id/photo_iv"
            android:layout_toRightOf="@+id/time_tv"
            android:text=" | 03/11"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slots_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_tv"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/photo_iv"
            android:layout_toRightOf="@+id/photo_iv"
            android:text="3 vagas"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slots_tv"
            android:paddingTop="5dp"
            android:text="Leonardo Marques"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/course_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/name_tv"
            android:layout_below="@+id/slots_tv"
            android:layout_toEndOf="@+id/name_tv"
            android:layout_toRightOf="@+id/name_tv"
            android:text=" | Computação"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/join_bt"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:text="Participar"
            android:textColor="@color/white"
            app:rd_enable="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>