<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        tools:context="br.ufrj.caronae.frags.RideOfferFrag">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/go_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/go_rb" />

            <RadioButton
                android:id="@+id/back_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_rb" />
        </RadioGroup>

        <TextView
            android:id="@+id/zone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:text="@string/zone_tv" />

        <EditText
            android:id="@+id/zone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zone_tv" />

        <TextView
            android:id="@+id/neighborhood_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zone_et"
            android:text="@string/neighborhood_tv" />

        <EditText
            android:id="@+id/neighborhood_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/neighborhood_tv" />

        <TextView
            android:id="@+id/place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/neighborhood_et"
            android:text="@string/place_tv" />

        <EditText
            android:id="@+id/place_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_tv" />

        <TextView
            android:id="@+id/way_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_et"
            android:text="@string/way_tv" />

        <EditText
            android:id="@+id/way_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/way_tv" />

        <RelativeLayout
            android:id="@+id/date_time_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/way_et"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_tv" />

            <TextView
                android:id="@+id/date_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_tv"
                android:text="01/02/2015"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/date_et"
                android:text="@string/time_tv" />

            <TextView
                android:id="@+id/time_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/time_tv"
                android:layout_alignStart="@+id/time_tv"
                android:layout_below="@+id/time_tv"
                android:text="12:34 AM"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

        <TextView
            android:id="@+id/slots_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_time_lay"
            android:text="@string/slots_tv" />

        <EditText
            android:id="@+id/slots_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slots_tv" />

        <TextView
            android:id="@+id/hub_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slots_et"
            android:text="@string/hub_tv" />

        <EditText
            android:id="@+id/hub_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hub_tv" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hub_et"
            android:text="@string/description_tv" />

        <EditText
            android:id="@+id/description_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_tv" />

        <CheckBox
            android:id="@+id/routine_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_et"
            android:checked="false"
            android:text="@string/routine_cb" />

        <LinearLayout
            android:id="@+id/days_lo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/routine_cb"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/monday_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S" />

            <CheckBox
                android:id="@+id/tuesday_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T" />

            <CheckBox
                android:id="@+id/wednesday_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q" />

            <CheckBox
                android:id="@+id/thursday_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q" />

            <CheckBox
                android:id="@+id/friday_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S" />

            <CheckBox
                android:id="@+id/saturday_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S" />
        </LinearLayout>

        <Button
            android:id="@+id/send_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/days_lo"
            android:layout_centerHorizontal="true"
            android:text="@string/send_bt" />

    </RelativeLayout>
</ScrollView>