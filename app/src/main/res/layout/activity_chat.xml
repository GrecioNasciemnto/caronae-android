    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_layout"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/chat_ride_info_size"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/chatMsgs_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:elevation="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="@dimen/cardview_default_elevation"
                    card_view:cardUseCompatPadding="true">

                    <EditText
                        android:id="@+id/msg_et"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:paddingLeft="16dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/chat_sendMsgHint" />
                </android.support.v7.widget.CardView>


                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/send_bt"
                    style="@style/LightRaiseColorButtonRippleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="center"
                    android:src="@drawable/ic_send_white_24dp"
                    android:text="@string/send_bt"
                    android:textColor="@color/white"
                    app:rd_enable="true" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:elevation="4dp"
            android:layout_height="@dimen/chat_ride_info_size"
            android:background="@android:color/transparent">

            <android.support.v7.widget.CardView
